{
  "name": "dsaalgo-platform",
  "version": "1.0.0",
  "description": "Interactive 3D DSA Learning Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "setup": "npm run install:all && npm run setup:db",
    "setup:db": "cd backend && npm run db:generate && npm run db:push && npm run db:seed",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "dsa",
    "algorithms",
    "data-structures",
    "learning",
    "3d",
    "react",
    "nodejs"
  ],
  "author": "Adarsh Priydarshi",
  "license": "MIT"
}
